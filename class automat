#include <iostream>
#include <stdio.h>

using namespace std;


class Automat {
// data of class automat
public:
    // attributes
    int x, j;
    int const constexpr static size = 2;
    int A1[size][size];
    int A2[size][size];
    // functions

    // creategrid: Benutzer setzt anfangs den Status des Automaten
    void creategrid() {
        for (x = 0; x < size; x++) {
            for (j = 0; j < size; j++) {
                std::cout << "1 = lebend, 0 = tod";
                printf("\n");
                std::cin >> A1[x][j];
            }
        }
    }
    // showgrid: Spielfeld anzeigen
    void showgrid() {
        int x, j;
        for (x = 0; x < size; x++) {
            for (j = 0; j < size; j++) {
                printf("%d ", A1[x][j]);
            }
            printf("\n");
        }
    }
    // currentgrid: repr채sentiert das Spielfeld nach einem Zustands체bergang
    void currentgrid() {
        int x, j;
        for (x = 0; x < size; x++) {
            for (j = 0; j < size; j++) {
                printf("%d ", A2[x][j]);
            }
            printf("\n");
        }
    }



    /*
Count the neighbors of cell (a, m) starting with cell (a, m - 1)
------------------------------------------
| a - 1, m - 1 | a, m - 1 | a + 1, m - 1 |
----------------------------------------
| a - 1, m     | a, m     | a + 1, m     |
------------------------------------------
| a - 1, m + 1 | a, m + 1 | a + 1, m + 1 |
------------------------------------------
*/
    // statetransition: f체hrt den Zustands체bergang durch
    void statetransition() {
        int a, m;
        int counter = 0;
        if (A1[a-1][m-1] == 1){
            counter++;}
        if (A1[a][m-1] == 1){
            counter++;}
        if (A1[a-1][m-1] == 1){
            counter++;}
        if (A1[a-1][m] == 1){
            counter++;}
        if (A1[a+1][m] == 1){
            counter++;}
        if (A1[a-1][m+1] == 1){
            counter++;}
        if (A1[a][m+1] == 1){
            counter++;}
        if (A1[a+1][m+1] == 1){
            counter++;}
        for (a = 0; a < size; a++) {
            for (m = 0; m < size; m++) {
                if (A1[a][m] == 1 && counter < 2 || counter > 3){
                    A2[a][m] = 0;
                }
                else if(A1[a][m] == 1 && counter >= 2 && counter <= 3){
                    A2[a][m] = 1;
                }

                else if(A1[a][m] == 0 && counter == 3){
                    A2[a][m] = 1;}

                else{
                    A2[a][m] = A1[a][m];}

                printf("%d ", A2[a][m]);
            }
        }
        printf("\n");
    }

};

int main() {
    Automat A;
    A.creategrid();
    printf("\n");
    A.showgrid();
    printf("\n");
    A.statetransition(); //funktioniert nicht ganz.

    system("pause");
    return 0;
}
